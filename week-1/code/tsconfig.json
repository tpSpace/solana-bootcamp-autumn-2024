{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/vars": ["./lib/vars.ts"],
      "@/lib/*": ["./lib/*"]
    }
  },
  "include": ["**/*.ts", "**/**.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
